<Page x:Class="WetMe.Presentation.Pages.AddMedicalRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WetMe.Presentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMedicalRecordPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Описание"/>
                <TextBox x:Name="DescBox" VerticalContentAlignment="Center"/>
            </StackPanel>
            <Button x:Name="SaveButton" HorizontalAlignment="Center" Content="Сохранить" Margin="0 10" Style="{StaticResource ElevatedButton}" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
